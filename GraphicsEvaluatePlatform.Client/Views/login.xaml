<Window x:Class="CrazyElephant.Client.Views.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="login" Height="358" Width="492">
    <Grid>
        <Label Content="登录名：" Height="28" HorizontalAlignment="Left" Margin="33,60,0,0" Name="label1" VerticalAlignment="Top" Width="77" />
        <TextBox Height="34" HorizontalAlignment="Left" Margin="108,57,0,0" Name="textBox1" VerticalAlignment="Top" Width="241"  Text="{Binding UserName}"/>
        <Label Content="密  码：" Height="28" HorizontalAlignment="Left" Margin="32,124,0,0" Name="label2" VerticalAlignment="Top" Width="77" />
        <TextBox Height="38" HorizontalAlignment="Left" Margin="108,117,0,0" Name="textBox2" VerticalAlignment="Top" Width="241"  Text="{Binding Password}"/>
        <Button Content="登录" Height="23" HorizontalAlignment="Left" Margin="148,221,0,0" Name="button1" VerticalAlignment="Top" Width="116" Command="{Binding loginOnCommand}"  />
        <CheckBox Content="记住密码？" Height="16" HorizontalAlignment="Left" Margin="104,165,0,0" Name="checkBox1" VerticalAlignment="Top" Width="86" IsChecked="{Binding IsChecked}"  />
    </Grid>
</Window>

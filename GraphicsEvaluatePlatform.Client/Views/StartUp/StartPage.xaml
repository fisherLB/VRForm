<Page x:Class="GraphicsEvaluatePlatform.Client.Views.StartUp.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraphicsEvaluatePlatform.Client.Views.StartUp"
      mc:Ignorable="d" 
      Title="StartPage" Height="631.818" d:DesignWidth="1300" Background="#FF001E42" VerticalAlignment="Top">

    <Grid>
        <Rectangle  Height="56" Margin="0,-5,0,581" Stroke="Black" StrokeThickness="0" VerticalAlignment="Bottom">
            <Rectangle.Fill>
                <ImageBrush TileMode="FlipX" ImageSource="/Images/menu_bg01.png"/>
            </Rectangle.Fill>
        </Rectangle>

        <Button x:Name="add" Content="新建" Margin="10,0,0,596" Height="26"  BorderThickness="0" Foreground="White"  Background="{x:Null}" Cursor="Hand" HorizontalAlignment="Left" Width="86" VerticalAlignment="Bottom" >
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <ContentControl x:Name="cc">
                        <Image Source="/Images/btn_new.png" />
                    </ContentControl>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <Button x:Name="edit" Content="修改" HorizontalAlignment="Left" Margin="101,0,0,596" Width="86" Height="26"  BorderThickness="0" Foreground="White"  Background="{x:Null}" Cursor="Hand" VerticalAlignment="Bottom" >
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <ContentControl x:Name="cc">
                        <Image Source="/Images/btn_edit.png" />
                    </ContentControl>
                </ControlTemplate>
            </Button.Template>

        </Button>

        <Button x:Name="del" Content="删除" HorizontalAlignment="Left" Margin="192,0,0,596" Width="86" Height="26"  BorderThickness="0" Foreground="White"  Background="{x:Null}" Cursor="Hand" VerticalAlignment="Bottom" >
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <ContentControl x:Name="cc">
                        <Image Source="/Images/btn_del.png" />
                    </ContentControl>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <Button x:Name="Print" Content="打印" HorizontalAlignment="Left" Margin="283,0,0,596" Width="85" Height="26"  BorderThickness="0" Foreground="White"  Background="{x:Null}" Cursor="Hand" VerticalAlignment="Bottom" >
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <ContentControl x:Name="cc">
                        <Image Source="/Images/btn_Print.png" />
                    </ContentControl>
                </ControlTemplate>
            </Button.Template>

        </Button>
        <TextBox x:Name="textBox1" Margin="373,0,0,597" TextWrapping="Wrap" Text="" Background="#FF0073B6" BorderBrush="#FF0083CC" Foreground="White" Width="320" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <DataGrid x:Name="dataGrid" Height="576" Margin="255,0,0,5" VerticalAlignment="Bottom"/>
        <TreeView x:Name="treeView" Height="576" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="240" Margin="0,0,0,5"/>

        <Button x:Name="search" Content="搜索" Margin="698,0,0,597" Height="25"  BorderThickness="0" Foreground="White"  Background="{x:Null}" Cursor="Hand" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="70" >
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <ContentControl x:Name="cc">
                        <Image Source="/Images/search.png" />
                    </ContentControl>
                </ControlTemplate>
            </Button.Template>

        </Button>

    </Grid>
</Page>

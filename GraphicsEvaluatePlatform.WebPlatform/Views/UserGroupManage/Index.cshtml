        //获取已在用户组的用户
        var inGroupUser = [];//记录已在用户组的用户
        function GetUserInUserGroup() {
            var UnitID_val = unitID;
            var row = $('#userGroup_table').bootstrapTable('getSelections');
            var GroupID_val = row[0].Ug_id;
            var Type_val = "1";//0:获取不在用户组内的用户，1：获取在用户组内的用户

                var result = new Array();
                var obj = {};
                for (var i = 0; i < arguments.length; i++) {
                    for (var j = 0; j < arguments[i].length; j++) {
                        var str = arguments[i][j];
                        if (!obj[str]) {
                            obj[str] = 1;
                        }
                        else {
                            obj[str]++;
                            if (obj[str] == arguments.length) {
                                result.push(str);
                            }

                    res = eval('(' + res + ')');
                    return {
                        "total": res.total,
                        "rows": res.rows
                    };
                },
                onLoadSuccess: function (data) {
                    if (data.rows.length != 0) {
                        for (var i = 0; i < data.rows.length; i++) {
                            inGroupUser.push(data.rows[i].Us_id);
                        }
                    } else {
                        inGroupUser = [];
                    };

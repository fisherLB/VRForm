@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <title>终端管理</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/css/main.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/font-awesome/css/font-awesome.css">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap-tab.css">
    <link rel="stylesheet" href="~/Content/bootstrap/css/tree.css" />
    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap/bootstrap-tab.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/layer/layer.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap/bootstrap-treeview.js" type="text/javascript"></script>
</head>
<body class="content-body">
    <div class="main_content">
        <div class="main_head">
            <div class="container_title">终端管理</div>
            <div class="container_btn">
                <button class="button button_blue">新建</button>
                <button class="button button_blue">修改</button>
                <button class="button button_orange">删除</button>
                <button class="button button_blue">启用</button>
                <button class="button button_red">禁用</button>
                <input class="title_search" />
                <button class="button button_blue">搜索</button>
                <div class="head-icon-right01"><img  src="~/Images/pic02.png" /></div>
            </div>
        </div>
        <div class="main_force">
            <div class="main_table_box">
                <div class="main_center_icon01"><img  src="~/Images/pic03.png" /></div>
                <div class="main_center_icon02"><img  src="~/Images/pic04.png" /></div>
                <div class="main_table_left">
                    <div class="left_tree" id="terminal_tree"></div>
                </div>
                <div class="main_table_center">
                    <div class="main_table_con">
                        <table class="table table-hover table-responsive">
                            <thead>
                                <tr>
                                    <th><input type="checkbox" name="VoteOption1" id="all_input"><span>序号</span></th>
                                    <th>机构名称</th>
                                    <th>终端编号</th>
                                    <th>IP地址</th>
                                    <th>MAC地址</th>
                                    <th>状态</th>
                                    <th>描述</th>
                                </tr>
                            </thead>
                            <tbody id="tbd">
                                <tr style="display: table-row;">
                                    <td><input type='checkbox' name='VoteOption1'><span>1</span></td>
                                    <td>桂林人事档案数字化001</td>
                                    <td>20180102</td>
                                    <td>192.168.1.115</td>
                                    <td>00000-0-00-00-0-0-00-44</td>
                                    <td>启用</td>
                                    <td></td>
                                </tr>
                                <tr style="display: table-row;">
                                    <td><input type='checkbox' name='VoteOption1'><span>2</span></td>
                                    <td>桂林人事档案数字化002</td>
                                    <td>20180103</td>
                                    <td>192.168.1.115</td>
                                    <td>00000-0-00-00-0-0-00-44</td>
                                    <td>启用</td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#terminal_tree').treeview({
                data: tree
            });
        });
        var tree = [
  {
      text: "广西人才中心",
      nodes: [
        {
            text: "桂林人才中心",
            nodes: [
              {
                  text: "灌阳县人才中心"
              },
              {
                  text: "七星区人才中心"
              }
            ]
        },
        {
            text: "兴安人才中心"
        }
      ]
  }
        ];
    </script>
</body>
</html>


        //获取选中的机构的所有子级机构
        function getAllChild(rowID, data) {
            var childIds = "";
            for (var i = 0; i < data.length; i++) {
                if (data[i].ParentId == rowID) {
                    childIds += "'" + data[i].u_Id + "'" + ',';
                    getAllChild(data[i].u_Id, data);
                }
            }
            return childIds;
        }

